.accordion.accordion-faq.mb-5

    .card.border-bottom(
        *ngIf='header'
    )
        .card-body
            .accordion-faq-title
                .mr-2
                    h4.mb-0
                        ng-content(select='.header-title')
                    p.card-text.text-gray-500
                        ng-content(select='.header-subtitle')
                .badge.badge-success-soft.badge-pill.text-success {{faqs.length}} Answers

    .card.accordion-faq-item(
        *ngFor='let faq of faqs; let i = index'
    )
        a.card-header(
            [ngClass]='{collapsed: collapsed[i]}',
            (click)='toggle(i)',
            data-toggle='collapse',
            href='javascript:void(0);'
        )
            .accordion-faq-item-heading
                | {{faq.question}}
                i-feather.accordion-faq-item-heading-arrow(name='chevron-down')
        .collapse.show(
            #collapsibleSection
        )
            .card-body.border-bottom
                | {{faq.answer}}