.row.justify-content-center.text-center.mb-5
    h4(
        *ngIf='!currency'
    ) {{currentValue}}
    h4(
        *ngIf='currency && !spread'
    ) {{currentValue | currency: 'USD' : 'symbol' : '1.0'}}
    h4(
        *ngIf='currency && spread && currentValue != max'
    ) {{currentValue | currency: 'USD' : 'symbol' : '1.0'}} - {{(currentValue | addStrings: spread) | currency: 'USD' : 'symbol' : '1.0'}}
    h4(
        *ngIf='currency && spread && currentValue == max && !maxValueIsCeiling'
    ) {{currentValue | currency: 'USD' : 'symbol' : '1.0'}}+
    h4(
        *ngIf='currency && spread && currentValue == max && maxValueIsCeiling'
    ) {{currentValue | currency: 'USD' : 'symbol' : '1.0'}}

form
    .form-group
        input.form-control-range#formControlRange(
            type='range',
            [formControl]='rangeControl',
            [min]='min',
            [max]='max',
            [step]='step'
        ) 

.d-flex.justify-content-between.mt-4.mb-5
    .min-value(
        *ngIf='!currency'
    ) {{min}}
    .min-value(
        *ngIf='currency'
    ) {{min | currency: 'USD' : 'symbol' : '1.0'}}
    .max-value(
        *ngIf='!currency'
    ) {{max}}
    .max-value(
        *ngIf='currency && !maxValueIsCeiling'
    ) {{max | currency: 'USD' : 'symbol' : '1.0'}}+
    .max-value(
        *ngIf='currency && maxValueIsCeiling'
    ) {{max | currency: 'USD' : 'symbol' : '1.0'}}
    